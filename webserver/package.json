{
  "name": "webserver",
  "version": "1.0.0",
  "description": "This a backend web server for bookinghub",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "npm install && npm run build:app && npm run postprocess",
    "build:app": "webpack --mode production",
    "postprocess": "npm run optimize:images && npm run optimize:js",
    "optimize:images": "imagemin images/* --out-dir=dist/images",
    "optimize:js": "terser dist/bundle.js -o dist/bundle.min.js"
  },
  "author": "stan-breaks",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^2.0.0-beta.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.0.0-beta.2",
    "express-session": "^1.18.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.2.2",
    "multer": "^1.4.5-lts.1",
    "nodemon": "^3.1.0",
    "serverless-http": "^3.2.0"
  }
}
